<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="theme"
        android:defaultValue="black_and_white"
        android:title="Theme"/>

    <SeekBarPreference
        android:key="timer_size"
        android:title="Timer size:"
        android:max="10"
        android:defaultValue="5" />

    <SeekBarPreference
        android:key="scramble_size"
        android:title="Scramble size:"
        android:max="12"
        android:defaultValue="6" />

    <CheckBoxPreference
        android:key="single_spaced_scramble"
        android:defaultValue="false"
        android:title="Single spaced scramble"/>

    <SwitchPreference
        android:key="recent_solve"
        android:defaultValue="false"
        android:title="Most recent solves first" />

</PreferenceScreen>